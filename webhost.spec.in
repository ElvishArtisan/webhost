Summary:       Embedded hosting system
Name:          webhost5
Version:       @VERSION@
Release:       @RPM_RELEASE@%{?dist}
License:       GPLv2
Packager:      Fred Gleason <fredg@paravelsystems.com>
Group:         Productivity/Multimedia/Other
Source:        %{name}-@VERSION@.tar.gz
Requires:      httpd
BuildRequires: qt-devel
BuildRoot:     /var/tmp/%{name}-@VERSION@
Conflicts:     webhost

%package devel
Summary:       Embedded hosting system
Requires:      webhost5 = @VERSION@


%description
Embedded hosting system.


%description devel
Development files for the webhost system.


%prep


%setup


%build
%configure
make -j @CPUS_AVAIL@


%install
rm -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT
rm -rf $RPM_BUILD_ROOT/usr/libexec
rm -f $RPM_BUILD_ROOT/var/*.html

%post
ldconfig
systemctl daemon-reload


%postun
ldconfig
systemctl daemon-reload


%clean
rm -rf $RPM_BUILD_ROOT


%files
%defattr(-,root,root)
/usr/lib/systemd/system/webhost.service
%{_libdir}/libwebhost5.so
%{_libdir}/libwebhost5.so.@INTERFACE_MAJOR@
%{_libdir}/libwebhost5.so.@INTERFACE_MAJOR@.@INTERFACE_MINOR@.@INTERFACE_POINT@
%{_sbindir}/webhostd
%doc docs/DEBUGGING.txt


%files devel
%{_includedir}/wh5/*
%{_libdir}/libwebhost5.a
%{_libdir}/libwebhost5.la
%{_libdir}/pkgconfig/webhost5.pc


%changelog
* Tue Jan 26 2016 Fred Gleason <fredg@paravelsystems.com>
-- Initial RPM creation.
